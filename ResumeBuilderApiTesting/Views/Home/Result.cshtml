@{
    ViewData["Title"] = ViewBag.Type == "resume" ? "Resume JSON" : "Cover Letter JSON";
    var json = ViewBag.Json as string;
    var isResume = ViewBag.Type == "resume";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">

            <h2 class="mb-4">
                @(isResume ? "📄 Resume JSON" : "✉️ Cover Letter JSON")
            </h2>

            <div class="card">
                <div class="card-body">
                    <pre class="bg-light p-4 rounded" style="max-height: 700px; overflow-y: auto; white-space: pre-wrap; word-wrap: break-word; border: 1px solid #ddd;">@json</pre>
                </div>
            </div>

            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-4">
                ← Generate Another
            </a>
        </div>
    </div>
</div>
